-- Treesitter Configuration
-- Advanced syntax highlighting and code understanding

return {
  "nvim-treesitter/nvim-treesitter",
  -- Don't auto-build on install to avoid initial errors
  build = function()
    -- Try to update parsers, but don't fail if compilation errors occur
    pcall(vim.cmd, "TSUpdate")
  end,
  event = { "BufReadPost", "BufNewFile" },
  config = function()
    local ok, configs = pcall(require, "nvim-treesitter.configs")
    if not ok then
      vim.notify("Treesitter not found!", vim.log.levels.ERROR)
      return
    end
    
    configs.setup({
      -- Start with absolutely minimal parsers
      ensure_installed = {
        "lua",
        "vim",
        "vimdoc",
      },
      -- Don't auto-install to avoid compilation errors
      auto_install = false,
      -- Don't install synchronously to avoid blocking
      sync_install = false,
      -- Ignore install errors
      ignore_install = {},
      -- Syntax highlighting
      highlight = {
        enable = true,
        additional_vim_regex_highlighting = false,
      },
      -- Indentation based on treesitter
      indent = { 
        enable = true 
      },
      -- Incremental selection
      incremental_selection = {
        enable = true,
        keymaps = {
          init_selection = "<C-space>",
          node_incremental = "<C-space>",
          scope_incremental = "<C-s>",
          node_decremental = "<C-backspace>",
        },
      },
    })
  end,
}